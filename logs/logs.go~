package logs

import(
	"os"

	"github.com/rs/zerolog"
)

var Logger zerolog.Logger

func Init(env string, logLevel int) {
	// Define the logger
	environment := "dev"
	if environment == "dev" {
		// Initiate the logger.
		cw := zerolog.ConsoleWriter{
			Out: os.Stderr,
			NoColor: false,
		}
		Logger = zerolog.New(cw).Level(logLevel)
		
	} else {
		Logger = zerolog.New(os.Stderr).Level(logLevel)
	}
}
