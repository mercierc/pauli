package logs

import(
	"github.com/rs/zerolog"
)

var Logger zerolog.Logger

func Init() {
	// Define the logger
	environment := "dev"
	if environment == "dev" {
		// Initiate the logger.
		cw := zerolog.ConsoleWriter{
			Out: os.Stderr,
			NoColor: false,
		}
		logger = zerolog.New(cw).Level(zerolog.InfoLevel)
		
	} else {
		logger = zerolog.New(os.Stderr).Level(zerolog.InfoLevel)
	}
}
