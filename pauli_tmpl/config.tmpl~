builder:
  image: {{ .Configuration.image }}
  use_sudo: true
  tag: {{ .Configuration.tag }}
  volumes:
    - type: bind
      source: /var/run/docker.sock
      target: /var/run/docker.sock
    - type: bind
      source: /root/.docker/config.json
      target: $HOME/.docker/config.json
name: {{ .Configuration.name }}